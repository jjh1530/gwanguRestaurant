<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %5p [%c] %m%n" />
        </Console>
    </Appenders>
    
    <Loggers>
        
      
		<Logger name="jdbc.sqlonly" level="DEBUG">
			<RegexFilter regex="(?s).*NOT_SQL_LOG.*" onMatch="ACCEPT" onMismatch="DENY" useRawMsg="true" />
		</Logger>
		

		<Root level="INFO">
           <AppenderRef ref="console" />
        </Root>
      
    </Loggers>
</Configuration>
